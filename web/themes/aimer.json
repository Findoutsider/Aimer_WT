{
    "meta": {
        "name": "Aimer Forest",
        "author": "Aimer",
        "version": "1.1"
    },
    "colors": {
        "//_基础色调": "基于 F2EFE7, 9ACBD0, 48A6A7, 006A71 设计",
        "--primary": "#006A71",
        "--primary-hover": "#48A6A7",
        "--bg-body": "#F2EFE7",
        "--bg-card": "#FFFFFF",
        "--text-main": "#004045",
        "--text-sec": "#48A6A7",
        "--border-color": "rgba(0, 0, 0, 0.05)",

        "//_导航栏": "与整体背景协调",
        "--nav-bg": "#FFFFFF",
        "--nav-item-text": "#48A6A7",
        "--nav-item-hover-bg": "rgba(154, 203, 208, 0.15)",
        "--nav-item-active": "#006A71",
        "--nav-item-active-bg": "rgba(0, 106, 113, 0.1)",

        "//_状态指示": "保留功能性颜色的同时进行饱和度微调",
        "--status-waiting": "#D9A84E",
        "--status-success": "#48A6A7",
        "--status-error": "#C65D52",
        "--status-icon-def": "#9ACBD0",

        "//_语音包卡片": "提升层次感",
        "--mod-card-title": "#004045",
        "--mod-ver-bg": "rgba(72, 166, 167, 0.1)",
        "--mod-ver-text": "#006A71",
        "--mod-author-text": "#48A6A7",

        "//_交互与链接": "保持品牌一致性",
        "--action-trash": "#006A71",
        "--action-trash-hover": "#C65D52",
        "--action-refresh": "#006A71",
        "--action-refresh-bg": "rgba(0, 106, 113, 0.1)",

        "//_链接色": "适配青色系",
        "--link-bili-normal": "#48A6A7",
        "--link-bili-hover": "#006A71",
        "--link-wt-normal": "#006A71",
        "--link-wt-hover": "#48A6A7",
        "--link-vid-normal": "#C65D52",
        "--link-vid-hover": "#006A71",

        "//_标签系统": "清新配色",
        "--tag-tank-bg": "#D1E6E7",
        "--tag-tank-text": "#006A71",
        "--tag-air-bg": "#F2EFE7",
        "--tag-air-text": "#48A6A7",
        "--tag-naval-bg": "#9ACBD0",
        "--tag-naval-text": "#FFFFFF",
        "--tag-radio-bg": "#EAE5D5",
        "--tag-radio-text": "#7A6F5D",

        "//_控件细节": "滚动条与输入框",
        "--input-bg": "#FFFFFF",
        "--input-border": "#E5E1D7",
        "--scrollbar-thumb": "#DED9CD",
        "--scrollbar-thumb-hover": "#48A6A7"
    }
}
